<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="mab.moneymanagement.view.fragment.DetailItem">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:textSize="25sp"
            android:text="@string/item_detail_title"
            android:textColor="@android:color/white"


            />

        <TextView

            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/item_name"
            android:textColor="@color/colorButton"
            android:padding="5dp"

            />


        <EditText
            android:textColorHint="@color/colorWhite"
            android:background="@drawable/edit_text_border"
            android:layout_marginTop="5dp"
            android:id="@+id/item_detail_et_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/add_item_item_name"
            android:padding="10dp"

            />

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/item_price"
            android:textColor="@color/colorButton"
            android:inputType="number"
            android:padding="5dp"


            />
        <EditText
            android:layout_marginTop="5dp"
            android:textColorHint="@color/colorWhite"
            android:background="@drawable/edit_text_border"
            android:id="@+id/item_detail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/price"
            android:inputType="number"

            android:padding="10dp"


            />

        <TextView
            android:textColor="@color/colorButton"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/item_note"
            android:padding="10dp" />
        <EditText
            android:textColorHint="@color/colorWhite"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:id="@+id/item_detail_et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/add_item_add_note"
            android:padding="10dp" />

        <Spinner
            android:layout_marginTop="12dp"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/item_detail_category_spiner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
           ></Spinner>

        <Spinner

            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/item_detail_payment_spiner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
           ></Spinner>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button


                android:layout_weight="1"
                android:id="@+id/item_detail_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_margin="10dp"
                android:text="@string/item_detail_delete"
                android:textColor="@color/colorPrimary" />

            <Button

                android:layout_weight="1"
                android:id="@+id/item_detail_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_margin="10dp"
                android:text="@string/item_detail_update"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</FrameLayout>
