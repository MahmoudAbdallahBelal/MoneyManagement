<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_activityy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mab.moneymanagement.view.activity.SettingActivity">


    <include
        android:id="@+id/setting_toolbar"
        layout="@layout/tool_bar" />

    <!-- TODO: setting activity to control application  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <CheckedTextView
            android:id="@+id/setting_check_tv_budget"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="4"
            android:text="@string/setting_budget" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_budget_image"
            android:visibility="invisible"
            android:src="@drawable/check"
            android:layout_weight="1" />


    </LinearLayout>


    <Spinner
        android:id="@+id/setting_spinner_select_day"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/setting_tv_password_protection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/setting_password_protection"
        android:textColor="@android:color/black"
        android:textSize="15dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <CheckedTextView
            android:id="@+id/setting_check_tv_daily_alert"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="4dp"
            android:layout_weight="4"
            android:text="@string/setting_daily_alert" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_alert_image"
            android:visibility="invisible"
            android:src="@drawable/check"
            android:layout_weight="1" />

    </LinearLayout>


    <TextView
        android:id="@+id/setting_tv_export_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/setting_export_file"
        android:textColor="@android:color/black"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/setting_create_backup_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/setting_create_data_backup"
        android:textColor="@android:color/black"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/setting_delete_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/seeting_delete_database"
        android:textColor="@android:color/black"
        android:textSize="15dp"

        />
</LinearLayout>
