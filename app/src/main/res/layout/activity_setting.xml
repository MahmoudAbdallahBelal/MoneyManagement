<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_activityy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"

    tools:context="mab.moneymanagement.view.activity.SettingActivity">


    <!-- TODO: setting activity to control application  -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/setting_toolbar"
            layout="@layout/tool_bar" />

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:cardCornerRadius="6dp"
    app:cardMaxElevation="10dp"
    android:layout_margin="5dp"

    >
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

            <CheckedTextView
                android:textColor="@color/colorButton"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center"
                android:id="@+id/setting_check_tv_budget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="8dp"
                android:text="@string/setting_budget" />

            <ImageView
                android:id="@+id/setting_budget_image"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/check"
                android:visibility="invisible" />


        </LinearLayout>
</android.support.v7.widget.CardView>

        <!--<Spinner-->
            <!--android:id="@+id/setting_spinner_select_day"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginBottom="5dp"-->
            <!---->
            <!--/>-->


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="10dp"
            android:layout_margin="5dp"

            >

        <org.angmarch.views.NiceSpinner
            android:textColor="@color/colorButton"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColorHint="#000"
            android:padding="10dp"
            android:hint="@string/select_day_spinner"
            android:id="@+id/setting_spinner_select_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="10dp"
            android:layout_margin="5dp"

            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:weightSum="3">

        <TextView
            android:textColor="@color/colorButton"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/setting_tv_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/setting_language"

            />

        <TextView
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/setting_tv_language_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="8dp"

            />

    </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="10dp"
            android:layout_margin="5dp"

            >
    <TextView
        android:textColor="@color/colorButton"

        android:textStyle="bold"
        android:id="@+id/setting_tv_password_protection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/setting_password_protection"
        android:textSize="17sp"

        />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="10dp"
            android:layout_margin="5dp"

            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <CheckedTextView
            android:textColor="@color/colorButton"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/setting_check_tv_daily_alert"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:checked="false"
            android:padding="4dp"
            android:text="@string/setting_daily_alert" />

        <ImageView
            android:id="@+id/setting_alert_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/check"
            android:visibility="invisible" />



    </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="10dp"
            android:layout_margin="5dp"

            >
    <TextView
        android:textColor="@color/colorButton"

        android:textStyle="bold"
        android:id="@+id/setting_tv_export_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/setting_export_file"
        android:textSize="17sp"

        />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="10dp"
            android:layout_margin="5dp"

            >
    <TextView
        android:textStyle="bold"
        android:id="@+id/setting_create_backup_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/setting_create_data_backup"
        android:textColor="@color/colorButton"
        android:textSize="17sp"

        />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="10dp"
            android:layout_margin="5dp"

            >
    <TextView
        android:textStyle="bold"
        android:id="@+id/setting_delete_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/seeting_delete_database"
        android:textColor="@color/colorButton"
        android:textSize="17sp"

        />
        </android.support.v7.widget.CardView>

</LinearLayout>
    </ScrollView>
</FrameLayout>