<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_activityy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mab.moneymanagement.view.activity.SettingActivity">


    <include
        android:id="@+id/setting_toolbar"
        layout="@layout/tool_bar" />

    <!-- TODO: setting activity to control application  -->

    <CheckedTextView
        android:id="@+id/setting_check_tv_budget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:text="@string/setting_budget" />



    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_spinner_select_day"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/setting_tv_password_protection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="@string/setting_password_protection"
        android:textColor="@android:color/black"
        android:textSize="15dp"

        />

    <CheckedTextView
        android:id="@+id/setting_check_tv_daily_alert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:checked="false"
        android:padding="5dp"
        android:text="@string/setting_daily_alert" />

    <TextView
        android:id="@+id/setting_tv_export_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="@string/setting_export_file"
        android:textColor="@android:color/black"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/setting_create_backup_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="@string/setting_create_data_backup"
        android:textColor="@android:color/black"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/setting_delete_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="@string/seeting_delete_database"
        android:textColor="@android:color/black"
        android:textSize="15dp"

        />
</LinearLayout>
