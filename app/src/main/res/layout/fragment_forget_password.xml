<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mab.moneymanagement.view.fragment.ForgetPasswordFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forget__et_emal"
            android:hint="@string/login_hint_enter_email"
            android:padding="8dp"
            android:inputType="textEmailAddress"
            android:layout_margin="10dp"

            />

        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forget_password_et_password"
            android:hint="@string/login_hint_enter_password"
            android:padding="8dp"
            android:layout_margin="10dp"

            />

        <Button
            android:id="@+id/forget_password_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:text="@string/forget_password_reset"
            android:textColor="@android:color/white"


            />


    </LinearLayout>


</FrameLayout>
